<div class="container-fluid">

  <!-- ぱんくず {{{ -->
  <div class="row-fluid">
    <ul class="breadcrumb">
      <li><%= link_to '板一覧', board_manager_index_path %> <span class="divider">/</span></li>
      <li><%= link_to @bbs_response.bbs_thread.bbs_board.screen_name, bbs_board_path(@bbs_response.bbs_thread.bbs_board) %> <span class="divider">/</span></li>
      <li><%= link_to @bbs_response.bbs_thread.screen_name, bbs_thread_path(@bbs_response.bbs_thread) %> <span class="divider">/</span></li>
      <li><%= link_to '書き込み No.' + @bbs_response.id.to_s, bbs_response_path(@bbs_response) %> <span class="divider">/</span></li>
      <li>編集画面</li>
    </ul>
  </div>
  <!-- }}} -->

  <div class="row-fluid">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>
            <h3>書き込みを編集する</h3>
          </th>
        </tr>
      </thead>
      <tbody>
      <%= form_for @bbs_response do |form| %>
        <%= hidden_field :data, :success_callback_url, :value => bbs_thread_path(@bbs_response.bbs_thread) %>
        <tr>
          <td>
            <h3>Name</h3>
            <%= form.text_field :name, :class => 'span12' %>
            <h3>Mail</h3>
            <%= form.text_field :mail, :class => 'span12' %>
            <h3>Info</h3>
            <%= form.text_field :info, :class => 'span12' %>
            <h3>Body</h3>
            <%= form.text_area :body, :class => 'span12' %>
            <%= form.submit '更新する', :class => 'btn btn-primary span12' %>
          </td>  
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
